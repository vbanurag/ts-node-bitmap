{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "./",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "skipLibCheck": true,
    "baseUrl": "./",
    "moduleResolution": "Node"
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}