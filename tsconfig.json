{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "lib",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "@types/jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}